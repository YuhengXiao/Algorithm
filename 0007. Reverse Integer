class Solution {
    public int reverse(int x) {
        try{
            Stack<Character> stack = new Stack<Character>();
            int negtive = 1;
            if (x < 0){
                x = x * -1;
                negtive = -1;
            }
            String X = String.valueOf(x);
            for (int i = 0; i < X.length(); i++){
                stack.add(X.charAt(i));
            }
            String ANS = "";
            while(!stack.isEmpty()){
                ANS = ANS + stack.pop();
            }
            return negtive * Integer.valueOf(ANS);
        } catch(Exception e){
            return 0;
        }
    }
}

/*
Notes:

(Using "Stack" to reverse an Integer.)
*/
