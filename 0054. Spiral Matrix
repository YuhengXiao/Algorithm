class Solution {
    public List<Integer> spiralOrder(int[][] matrix) {
        List<Integer> ans = new ArrayList<Integer>();
        int l = 0;
        int r = matrix[0].length - 1;
        int u = 0;
        int d = matrix.length - 1;
        while (l <= r && u <= d){
            for (int i = l; i <= r; i++){
                ans.add(matrix[u][i]);
            }
            u++;
            for (int i = u; i <= d; i++){
                ans.add(matrix[i][r]);
            }
            r--;
            for(int i = r; i >= l && u <= d; i--){
                ans.add(matrix[d][i]);
            }
            d--;
            for(int i = d; i >= u && l <= r; i--){
                ans.add(matrix[i][l]);
            }
            l++;
        }
        return ans;
    }
}

/*
Notes:

(Using “4 boundaries pointers” to iterate through a 2D list in spiral order.)
*/
