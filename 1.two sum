class Solution 
{
    public int[] twoSum(int[] nums, int target)
    {
          
        int n=nums.length;
        int sum=0;
        int i,k,m;
        for(i=0;i<n;i++)
        {
            for(k=i+1;k<n;k++)
            {
                sum=nums[i]+nums[k];
                if(sum==target)
                return new int[]{i, k};
            }
        }
    return new int[0]; //返回值的格式要和函数格式一致，不能返回0 
    }
}

标答：哈希表法（更高效）
class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer,Integer> sum =  new HashMap<Integer,Integer>();
        for(int i=0; i < nums.length; i++){
            if(sum.containsKey(target-nums[i])){
                return new int[]{sum.get(target-nums[i]),i};
            }
            sum.put(nums[i],i);
        }
        return new int[]{0};
    }
}
