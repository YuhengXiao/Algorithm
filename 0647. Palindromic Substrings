// --------------Approach 1(Two pointers)--------------------------
class Solution {
    public int countSubstrings(String s) {
        int ans = 0;
        for (int i = 0; i < s.length(); i++){
            for (int j = 1; i + j <= s.length(); j++){
                if(check(s.substring(i, i + j))){
                    ans++;
                }
            }
        }
        return ans;
    }
    public boolean check(String s){
        int l = 0, r = s.length() - 1;
        while(l < r){
            if (s.charAt(l) == s.charAt(r)){
                l++;
                r--;
            } else{
                break;
            }
        }
        if (l >= r){
            return true;
        }
        return false;
    }
}

// --------------Approach 2("Odd check" and "Even check")--------------------------

class Solution {
    public int countSubstrings(String s) {
        int ans = 0;
        for (int i = 0; i < s.length(); i++){
            ans = ans + oddcheck(s, i) + evencheck(s, i);
        }
        return ans;
    }
    
    public int oddcheck(String s, int index){
        int l = index, r = index;
        int count = 0;
        while(l >= 0 && r < s.length()){
            if (s.charAt(l) == s.charAt(r)){
                count++;
            } else{
                return count;
            }
            l--;
            r++;
        }
        return count;
    }
    public int evencheck(String s, int index){
        int l = index, r = index + 1;
        int count = 0;
        while(l >= 0 && r < s.length()){
            if (s.charAt(l) == s.charAt(r)){
                count++;
            } else{
                return count;
            }
            l--;
            r++;
        }
        return count;
    }
}

/*
Notes:

(1.	Approach 1: using “Two pointers” to determine if the substring is a palindrome, the left pointer begins at the head and the right pointer begins at the end.
(2.	Approach 2: using “Odd check (if the length of substring is odd)” and “Even check (if the length of substring is even)” at each index of the string.)

*/
