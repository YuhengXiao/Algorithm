/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    List<TreeNode> temp = new ArrayList<TreeNode>();
    public void flatten(TreeNode root) {
        traverse(root, temp);
        if (temp.size() > 1){
            for (TreeNode nn : temp){
                root.left = null;
                root.right = nn;
                root = root.right;
            }
        }
    }

    public void traverse(TreeNode root, List<TreeNode> temp){
        if (root == null){
            return;
        }
        temp.add(root);
        traverse(root.left, temp);
        traverse(root.right, temp);
    }
}

/*
Notes:

(Using DFS)
