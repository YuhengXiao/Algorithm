class Solution {
    public String[] reorderLogFiles(String[] logs) {
        Arrays.sort(logs, new Comparator<String>(){
            public int compare(String a, String b){
                int index1 = a.indexOf(' ');
                int index2 = b.indexOf(' ');
                String sub1 = a.substring(index1 + 1);
                String sub2 = b.substring(index2 + 1);
                if (Character.isLetter(sub1.charAt(0)) && Character.isLetter(sub2.charAt(0))){
                    if (sub1.compareTo(sub2) == 0){
                        return a.compareTo(b);
                    }else{
                        return sub1.compareTo(sub2);
                    }
                } else if (Character.isDigit(sub1.charAt(0)) && Character.isDigit(sub2.charAt(0))){
                    return 0;
                } else if (Character.isDigit(sub1.charAt(0))){
                    return 1;
                } else if (Character.isDigit(sub2.charAt(0))){
                    return -1;
                } 
                return 0;
            }
        });
        return logs;
    }
}

/*
Notes:

(Redefining “Comparator” to sort an array.)
*/
