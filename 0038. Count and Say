class Solution {
    public String countAndSay(int n) {
        String ans = "1";
        for (int i = 2; i <= n; i++){
            StringBuilder cur = new StringBuilder();
            int l = 0, r = 0;
            while (r <= ans.length() - 1){
                int count = 0;
                while (r < ans.length() && ans.charAt(r) == ans.charAt(l)){
                    count++;
                    r++;
                }
                cur.append(count);
                cur.append(ans.charAt(l));
                l = r;
                count = 0;
            }
            ans = cur.toString();
        }
        return ans;
    }
}

/*
Notes:

(Using “Two Pointers” to count the number of times each different character occurs in a string.)
*/
