class Solution {
    public int[] countBits(int n) {
        int change = 1;
        int count = change;
        int[] dp = new int[n + 1];
        dp[0] = 0;
        for(int i = 1; i <= n; i++){
            dp[i] = 1 + dp[i - change];
            count--;
            if (count == 0){
                change = change * 2;
                count = change;
            }
        }
        return dp;
    }
}

/*
Notes:

(Using “Dynamic Programming” + “Digital Computing”.)

