class Solution {
    public int trap(int[] height) {
        int l = 0, r = height.length - 1;
        int lmax = 0, rmax = 0;
        int ans = 0;
        while (l < r){
            if (height[l] <= height[r]){
                if(height[l] > lmax){
                    lmax = height[l];
                } 
                else{
                    ans = ans + lmax - height[l];
                }   
                l ++;
            } 
            else {
                if (height[r] > rmax){
                    rmax = height[r];
                } 
                else {
                    ans = ans + rmax - height[r];
                }
                r--;   
            }
        }
        return ans;
    }
}

/*
Note:

(Using two pointers when dealing with “Tetris Problems”. 
For getting the area of “Elevation map”, we just need to set two pointers at each side and move the lower one at each time until two pointers meet.)
*/
