class Solution {
    public void nextPermutation(int[] nums) {
        int i = nums.length - 2;
        while (i >= 0 && nums[i] >= nums[i + 1]){
            i--;
        }
        if (i != -1){
            int j = nums.length - 1;
            while(j > i + 1 && nums[i] >= nums[j]){
                j--;
            }
            swap(nums, i, j);
        }
            reverse(nums, i + 1);
    }

    public void swap(int[]nums, int i, int j){
        int temp = nums[i];
        nums[i] = nums[j];
        nums[j] = temp;
    }

    public void reverse(int[] nums, int left){
        int right = nums.length - 1;
        while(left < right){
            swap(nums, left, right);
            left ++;
            right --;
        }
    }

}

/*
Note:
(3 steps: 1. Find the index need to change 2. pass the smallest value into the index 3.reverse the remaining index)

