class Solution {
    public int findPeakElement(int[] nums) {
        int l = 0, r = nums.length - 1;
        while (l < r){
            if (l + 1 == r){
                if (nums[l] < nums[r]){
                    return r;
                } else{
                    return l;
                }
            }
            int mid = (l + r) / 2;
            if (nums[mid] > nums[mid + 1]){
                r = mid;
            } else {
                l = mid;
            }
        }
        return 0;
    }
}

/*
Notes:

(Using “Binary Search” to find the element which satisfies the condition in O(log n) time)
*/
