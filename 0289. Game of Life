class Solution {
    public void gameOfLife(int[][] board) {
        int[][] ans = new int[board.length][board[0].length];
        for (int i = 0; i < board.length; i++){
            for (int j = 0; j < board[0].length; j++){
                if (board[i][j] == 0){
                    if (count(board, i, j) == 3){
                        ans[i][j] = 1;
                    }else{
                        ans[i][j] = 0;
                    }
                }
                if (board[i][j] == 1){
                    if (count(board, i, j) == 2 || count(board, i, j) == 3){
                        ans[i][j] = 1;
                    } else{
                        ans[i][j] = 0;
                    }
                }
            }
        }
        for (int i = 0; i < board.length; i++){
            for (int j = 0; j < board[0].length; j++){
                board[i][j] = ans[i][j];
            }
        }
    }
    public int count(int[][] board, int x, int y){
        int count = 0;
        for (int i = -1; i < 2; i++){
            for (int j = -1; j < 2; j++){
                if (x + i >= 0 && x + i < board.length && y + j >= 0 && y + j < board[0].length){
                    if (board[x + i][y + j] == 1){
                        count++;
                    }
                }
            }
        }
        return count - board[x][y];
    }
}
