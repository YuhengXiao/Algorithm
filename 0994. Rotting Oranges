class Solution {
    public int orangesRotting(int[][] grid) {
        int fresh = 0;
        Queue<Integer> row = new LinkedList<Integer>();
        Queue<Integer> col = new LinkedList<Integer>();
        for (int i = 0; i < grid.length; i++){
            for (int j = 0; j < grid[0].length; j++){
                if (grid[i][j] == 2){
                    row.add(i);
                    col.add(j);
                }
                if (grid[i][j] == 1){
                    fresh++;
                }
            }
        }
        int num = 0;
        int time = 0;
        int len = row.size();
        while(!row.isEmpty()){
            for (int i = 0; i < len; i++){
                int x = row.remove();
                int y = col.remove();
                if (x - 1 >= 0 && grid[x - 1][y] == 1){
                    grid[x - 1][y] = 2;
                    row.add(x - 1);
                    col.add(y);
                    num++;
                }
                if (x + 1 < grid.length && grid[x + 1][y] == 1){
                    grid[x + 1][y] = 2;
                    row.add(x + 1);
                    col.add(y);
                    num++;
                }
                if (y - 1 >= 0 && grid[x][y - 1] == 1){
                    grid[x][y - 1] = 2;
                    row.add(x);
                    col.add(y - 1);
                    num++;
                }
                if (y + 1 < grid[0].length && grid[x][y + 1] == 1){
                    grid[x][y + 1] = 2;
                    row.add(x);
                    col.add(y + 1);
                    num++;
                }
            }
            len = row.size();
            time++;
        }
        if (num == fresh){
            if (time == 0){
                return 0;
            } else{
                return time - 1;
            }
        }
        return -1;
    }
}

/*
Notes:

(Using “BFS” when there’re more than one “entrance” works simultaneously.)

https://www.youtube.com/watch?v=y704fEOx0s0
*/
